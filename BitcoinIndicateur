normalisedstdevValueLong            = stdevValue > 0 ? "âœ“ : +"+str.tostring(math.round(stdevValue)) + " %": "â˜“"
normalisedstdevValueShort           = stdevValue < 0 ? "âœ“ : +"+str.tostring(math.round(stdevValue)) + " %" : "â˜“"
normalisedratioValueLong            = ratioValue > 50 ? "âœ“ : "+str.tostring(ratioValue)+" %" : "â˜“"
normalisedratioValueShort           = ratioValue < 50 ? "âœ“ : "+str.tostring(ratioValue)+" %" : "â˜“"

